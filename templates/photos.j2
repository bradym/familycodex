<div id="carousel" class="carousel slide" data-bs-interval="false">
    <div class="carousel-inner">
        {% for photo in current_family['photos'] %}
        <div class="carousel-item{% if loop.first %} active{% endif %}">
            <div class="carousel-caption d-flex">
                {% if current_family['photos'] | count > 1 %}
                <button class="carousel-control-prev justify-content-evenly" href="#carousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon pr-4" aria-hidden="true"></span>
                    <span>Previous</span>
                </button>
                {% endif %}

                <div class="flex-grow-1">
                    {% if photo['title'] %}{{ photo['title'] }}{% endif %}
                </div>

                {% if current_family['photos'] | count > 1 %}
                <button class="carousel-control-next justify-content-evenly" href="#carousel" role="button" data-bs-slide="next">
                    <span>Next</span>
                    <span class="carousel-control-next-icon pr-4" aria-hidden="true"></span>
                </button>
                {% endif %}
            </div>
            <img class="d-block w-100" src="{{ mediaDomain }}/{{ photo['url'] }}"{% if photo['title'] %} alt="{{ photo['title'] }}"{% endif %}>
        </div>
        {% endfor %}
    </div>
</div>
